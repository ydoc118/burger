<h1 class = "title">Eat-Da-Burger</h1>
<div class="row">
    <div class="col-4"></div>
    <iframe src="https://giphy.com/embed/2P8Rqg3cWQ4YE" width="250" height="250" frameBorder="0" id="gif" class="giphy-embed col-4" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/haydiroket-cheeseburger-haydiroket-RKsR28Jzn7sqI"></a></p>
</div>
<div class="row" id="burgersTop">
    <div class="col">
        <h2>New Burgers to Eat!</h2>
        <ul style="list-style-type:none;">
            {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgers-block devoured=true}}
                {{/unless}}
            {{/each}}    
            
        </ul>
    </div>
    <div class="col">
    <h2>Devoured Burgers!</h2>
        <ul style="list-style-type:none;">
            {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgers-block devoured=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h2 class="burgToEat">Add a Burger to Eat!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <textarea class="form-control" id="burg" name="burger" rows="3"></textarea>
    {{!-- <input class="form-control" type="text" id="burg" name="burger"> --}}
  </div>

  <button class="addBurger btn btn-primary" type="submit">Add Burger</button>
</form>